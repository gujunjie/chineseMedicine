<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".AboutActivity">

    <customview.MyTitleBar
        android:id="@+id/about_titleBar"
        app:title="关于中草药坊"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:src="@mipmap/loginlogo"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <TextView
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:textColor="#000000"
        android:text="当前版本 v1.0.0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_weight="1"
      android:layout_height="0dp">


      <TextView
          android:id="@+id/tv_checkUpdate"
          android:textSize="16sp"
          android:layout_marginBottom="2dp"
          android:padding="15dp"
          android:textColor="#000000"
          android:text="检查更新"
          android:background="@drawable/item_selector"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
      <TextView
          android:id="@+id/tv_agreement"
          android:textSize="16sp"
          android:layout_marginBottom="2dp"
          android:padding="15dp"
          android:textColor="#000000"
          android:text="软件许可使用协议"
          android:background="@drawable/item_selector"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
      <TextView
          android:id="@+id/tv_reward"
          android:textSize="16sp"
          android:layout_marginBottom="2dp"
          android:padding="15dp"
          android:textColor="#000000"
          android:text="捐赠支持"
          android:background="@drawable/item_selector"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />

      <TextView
          android:id="@+id/tv_contact"
          android:textSize="16sp"
          android:padding="15dp"
          android:textColor="#000000"
          android:text="联系我们"
          android:background="@drawable/item_selector"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
  </LinearLayout>


    <TextView
        android:padding="5dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:text="Copyright © 2018-2019 gujunjie from GDPU. All rights reserved."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />





</LinearLayout>
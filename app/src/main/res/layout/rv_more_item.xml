<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            app:cardCornerRadius="5dp"
            android:id="@+id/cv_image"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_margin="10dp">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/iv_morePhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>

        <TextView
            android:maxLines="2"
            android:id="@+id/tv_title"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:text="gagesageshaegeagre"
            android:layout_toEndOf="@+id/cv_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:maxLines="2"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@+id/cv_image"
            android:layout_below="@+id/tv_title"
            android:textSize="13sp"
            android:text="gagesageshaegeagre"
            android:id="@+id/tv_subTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:padding="2dp"
            android:textColor="#ffffff"
            android:background="@drawable/tuijian_sort_background"
            android:textSize="12sp"
            android:id="@+id/tv_sortType"
            android:layout_margin="8dp"
            android:text="gagragagaga"
            android:layout_below="@+id/tv_subTitle"
            android:layout_toEndOf="@+id/cv_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="12sp"
            android:id="@+id/tv_lastTime"
            android:gravity="end"
            android:layout_margin="8dp"
            android:layout_below="@+id/tv_subTitle"
            android:layout_toEndOf="@+id/tv_sortType"
            android:layout_alignParentEnd="true"
            android:text="63736572"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</android.support.v7.widget.CardView>
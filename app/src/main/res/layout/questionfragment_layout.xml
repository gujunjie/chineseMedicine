<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textColor="@color/colorWhite"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

  <android.support.v7.widget.CardView
      app:cardCornerRadius="8dp"
      android:elevation="5dp"
      android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <com.youth.banner.Banner
        app:indicator_width="5dp"
        app:indicator_height="5dp"
        android:id="@+id/question_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

   </android.support.v7.widget.CardView>





    <RelativeLayout
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChart"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="30dp"
        android:layout_width="110dp"
        android:layout_height="110dp"/>

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/pieChart"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_lastStudyProgressTitle"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:layout_marginStart="30dp"
            android:text="上次学习进度"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_lastestLearningData"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="10dp"
            android:text="暂无学习记录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>





</RelativeLayout>


    <GridLayout
        android:background="@color/colorBackground"
        android:layout_marginTop="10dp"
        android:layout_gravity="fill_vertical"
        android:rowCount="2"
        android:columnCount="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_exam"
            android:layout_margin="1dp"
            android:background="@drawable/item_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            >

            <ImageView
                android:layout_marginTop="10dp"
                android:src="@mipmap/manyhomework"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="13sp"
                android:text="题海战术"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_myNote"
            android:layout_margin="1dp"
            android:background="@drawable/item_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1">

            <ImageView
                android:layout_marginTop="10dp"
                android:src="@mipmap/practice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="13sp"
                android:text="我的笔记"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_errorExam"
            android:layout_margin="1dp"
            android:background="@drawable/item_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            >

            <ImageView
                android:layout_marginTop="10dp"
                android:src="@mipmap/errorquestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="13sp"
                android:text="错题本"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



        </LinearLayout>

        <LinearLayout
            android:layout_margin="1dp"
            android:background="@drawable/item_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            >

            <ImageView
                android:layout_marginTop="10dp"
                android:src="@mipmap/collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="13sp"
                android:text="收藏夹"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



        </LinearLayout>

        <LinearLayout
            android:layout_margin="1dp"
            android:background="@drawable/item_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            >

            <ImageView
                android:layout_marginTop="10dp"
                android:src="@mipmap/searchquestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="13sp"
                android:text="查找试题"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



        </LinearLayout>

        <LinearLayout
            android:layout_margin="1dp"
            android:background="@drawable/item_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            >

            <ImageView
                android:layout_marginTop="10dp"
                android:src="@mipmap/analyse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="13sp"
                android:text="统计分析"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



        </LinearLayout>
    </GridLayout>



</LinearLayout>